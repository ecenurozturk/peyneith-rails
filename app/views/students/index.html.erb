<div class="row">
  <p id="notice"><%= notice %></p>

  <h1>Listing Students</h1>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Age</th>
        <th>Degree</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @students.each do |student| %>
        <tr>
          <td><%= student.name %></td>
          <td><%= student.age %></td>
          <td><%= student.degree %></td>
          <td><%= link_to 'Show', student, {:class => 'button'} %></td>
          <td><%= link_to 'Edit', edit_student_path(student), {:class => 'button'} %></td>
          <td><%= link_to 'Destroy', student, { method: :delete, data: { confirm: 'Are you sure?' }, :class => 'button' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Student', new_student_path, {:class => "button"} %>

</div>
